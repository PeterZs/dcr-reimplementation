{
    "python.pythonPath": "venv/bin/python3",
    "python.formatting.provider": "black",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.pyc": {"when": "$(basename).py"}, 
        "**/__pycache__": true
    },
    "editor.rulers": [80]
}